<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="60dp"
    android:layout_gravity="center|top"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/button_gradient"
    android:orientation="vertical"
    android:paddingStart="5dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/upperBarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/blue_gradient"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/markerimageView"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="7.7dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/spotbus_logo"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/stopnametextView"
                android:layout_width="195dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/blinker_semibold"
                android:gravity="center"
                android:text="@string/durgakund"
                android:textColor="#E6E0E0"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/schTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/blinker_semibold"
                android:gravity="center"
                android:padding="3dp"
                android:text="11:43 AM"
                android:textColor="#CE98F169"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/button_gradient_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/delaytextView"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/alata"
                android:gravity="center"
                android:text="Delayed by 10 minutes"
                android:textColor="#C62828"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/etaTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/blinker_semibold"
                android:gravity="center"
                android:padding="3dp"
                android:text="11:40 AM"
                android:textColor="#CEB31111"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>